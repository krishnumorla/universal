{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "@angular/platform-node": ["./src/platform-node"],
      "@angular/platform-node-dynamic": ["./src/platform-node-dynamic"],
      "@angular/universal": ["./src/universal"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
